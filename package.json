{
  "name": "24stundenpflege",
  "version": "1.0.4",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm:renderer:dev\" \"npm:electron:dev\"",
    "renderer:dev": "npm --prefix renderer run dev",
    "electron:dev": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "npm --prefix renderer run build",
    "build:installer": "npm run build:renderer && electron-builder --win nsis",
    "build:portable": "npm run build:renderer && electron-builder --win portable",
    "build:all": "npm run build:renderer && electron-builder --win",
    "icons": "node scripts/gen-icons.mjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Samuel Haunschmid",
  "license": "ISC",
  "description": "Verwaltungs-App f√ºr 24-Stunden-Pflege (Electron, Windows, Mac, Linux)",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "docxtemplater": "^3.63.2",
    "mammoth": "^1.6.0",
    "nodemailer": "^7.0.9",
    "officegen": "^0.6.5",
    "pizzip": "^3.2.0",
    "xlsx": "^0.18.5",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "sharp": "^0.34.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.24stundenpflege.app",
    "productName": "24StundenPflege",
    "files": [
      "main.js",
      "preload.js",
      "mailService.js",
      "renderer/dist/**",
      "node_modules/**",
      "app-icon.*",
      "config.json",
      "RechnungsVorlagen/**"
    ],
    "directories": {
      "buildResources": ".",
      "output": "releases"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "app-icon-512.png",
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "24h Pflege",
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "mac": {
      "icon": "app-icon-512.png"
    },
    "linux": {
      "icon": "app-icon-512.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "samuelhaunschmid-web",
        "repo": "24HPflege-updates",
        "releaseType": "release"
      }
    ]
  }
}
